{
	"name": "textedit",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"electron": "concurrently --kill-others \"svelte-kit dev\" \"electron src/electron.cjs\"",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"dev:package": "npm run build && electron-builder --config electron-builder.config.json --dir",
		"electron:build": "vite build && electron-builder",
		"electron:dev": "",
		"electron:start": "electron electron/index.cjs",
		"package": "npm run build && electron-builder --config electron-builder.config.json"
	},
	"devDependencies": {
		"@playwright/test": "^1.27.1",
		"@supabase/supabase-js": "~1.34.1",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"autoprefixer": "^10.4.12",
		"electron": "^20.3.2",
		"electron-builder": "^23.6.0",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.18",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.8.0",
		"sass": "^1.55.0",
		"svelte": "^3.52.0",
		"svelte-check": "^2.9.2",
		"svelte-popperjs": "^1.3.2",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.8",
		"typescript": "^4.8.4",
		"vite": "^3.1.8"
	},
	"type": "module",
	"dependencies": {
		"@popperjs/core": "^2.11.6",
		"@sveltejs/adapter-static": "1.0.0-next.41",
		"@sveltejs/adapter-vercel": "1.0.0-next.72",
		"cookie": "0.5.0",
		"dotenv": "^16.0.3",
		"easymde": "^2.18.0",
		"jszip": "^3.10.1"
	}
}
